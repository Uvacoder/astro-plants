---
const { data } = Astro.props
---
<section aria-label="Data">
	<dl>
		<span>
			<dt>Type</dt>
			<dd>{data['type']}</dd>
		</span>
		<span>
			<dt>Native to</dt>
			<dd>{data['native-to']}</dd>
		</span>
		<span>
			<dt>Climate</dt>
			<dd>{data['ideal-climate']}</dd>
		</span>
		<span>
			<dt>Sun</dt>
			<dd>{data['sun']}</dd>
		</span>
		<span>
			<dt>Water</dt>
			<dd>{data['water']}</dd>
		</span>
		<span>
			<dt>Height</dt>
			<dd>{data['height-range']}</dd>
		</span>
	</dl>
</section>

<style>
	section
	{
		font-family: var(--font);
		font-size: 1.2rem;
		line-height: 1.6;

		max-width: 65ch;
		margin: 3rem auto;
		text-align: justify;

		background: hsl(var(--green) / 1);
		border-radius: 10px;
		padding: 5px 20px 10px;
		box-sizing: border-box;
	}

	section ::selection
	{
		background: hsl(var(--light-green) / 0.5);
	}

	dl
	{
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 15px;
	}

	dt
	{
		color: hsl(var(--yellow) / 0.9);
		font-family: Helvetica, sans-serif;
		font-size: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.02em;
		text-align: left;
		margin: 0;

		transform: scaleY(0.75);
	}

	dd
	{
		color: hsl(var(--light-green) / 1);
		font-size: 1.4rem;
		font-style: italic;
		letter-spacing: -0.03em;
		margin: 0;
		padding: 0;
		line-height: 1;
		text-indent: 0;
		text-align: left;
	}
</style>