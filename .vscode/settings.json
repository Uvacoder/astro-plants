{
	"editor.formatOnSave": false,
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"eslint.validate": ["vue", "javascript"],
	"eslint.packageManager": "npm",
	"stylelint.enable": true,
	"stylelint.validate": ["vue", "css"],
	"textlint.autoFixOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.fixAll.stylelint": true
	},
	"files.exclude": {
		"**/.git": true,
		".gitignore": true,
		"**/.DS_Store": true,
		"pnpm-lock.yaml": true,
		"node_modules": true,
		"dist": true,
		".eslintrc": true,
		".textlintrc": true,
		".env.development": true,
		".env.production": true,
		"astro.config.mjs": true,
		"postcss.config.cjs": true,
		"public/**/*.avif": true,
		"public/**/*.webp": true,
	},
	"editor.tokenColorCustomizations": {
		"textMateRules": [{
			"scope": "string.key.json5",
			"settings": { "foreground": "#8BDEDB" },
		}],
	},
}